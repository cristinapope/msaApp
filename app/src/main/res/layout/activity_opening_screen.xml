<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:theme="@style/Theme.AppCompat.DayNight.DarkActionBar"
    >

    <androidx.appcompat.widget.SearchView
        android:id="@+id/search_bar"
        android:layout_width="347dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="30dp"
        android:background="@color/searchBar" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="561dp"
        android:layout_above="@+id/adoptntButtonMainScreen"
        android:layout_below="@+id/search_bar"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="30dp"
        android:background="@color/itemColor">

        <RelativeLayout
            android:id="@+id/miniItemOpeningScreen"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="15dp"
            android:layout_marginTop="60dp"
            android:layout_marginEnd="15dp"
            android:background="@color/miniItemOpeningScreen">


            <ImageView
                android:id="@+id/imageViewLastAdded1"
                android:layout_width="89dp"
                android:layout_height="77dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="9dp"
                android:layout_marginTop="16dp"
                tools:srcCompat="@tools:sample/backgrounds/scenic" />

            <ImageView
                android:id="@+id/imageViewLastAdded2"
                android:layout_width="89dp"
                android:layout_height="77dp"
                android:layout_alignParentTop="true"
                android:layout_marginStart="42dp"
                android:layout_marginTop="18dp"
                android:layout_toEndOf="@+id/imageViewLastAdded1"
                tools:srcCompat="@tools:sample/backgrounds/scenic" />
        </RelativeLayout>

        <TextView
            android:id="@+id/lastAddedText"
            android:layout_width="116dp"
            android:layout_height="34dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="31dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="200dp"
            android:text="@string/last_added"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/findOutMoreText"
            android:layout_width="wrap_content"
            android:layout_height="25dp"

            android:layout_below="@+id/miniItemOpeningScreen"
            android:layout_alignParentStart="true"
            android:layout_marginStart="31dp"
            android:layout_marginTop="34dp"
            android:layout_marginBottom="18dp"
            android:text="@string/find_out_more"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <RelativeLayout
            android:id="@+id/findOutMoreLayout"
            android:layout_width="280dp"
            android:layout_height="107dp"
            android:layout_below="@+id/findOutMoreText"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="33dp">

            <ImageView
                android:id="@+id/imageViewFindOutMore1"
                android:layout_width="89dp"
                android:layout_height="77dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="17dp"
                android:layout_marginTop="18dp"

                android:layout_marginBottom="27dp"
                tools:srcCompat="@tools:sample/backgrounds/scenic" />

            <ImageView
                android:id="@+id/imageViewFindOutMore2"
                android:layout_width="100dp"
                android:layout_height="58dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"

                android:layout_marginStart="85dp"
                android:layout_marginTop="18dp"
                android:layout_marginEnd="30dp"
                android:layout_marginBottom="27dp"
                android:layout_toEndOf="@+id/imageViewFindOutMore1"
                tools:srcCompat="@tools:sample/backgrounds/scenic" />

        </RelativeLayout>

    </RelativeLayout>

        <Button
            android:id="@+id/adoptntButtonMainScreen"
            android:layout_width="234dp"
            android:layout_height="60dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="50dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="50dp"
            android:layout_marginBottom="31dp"
            android:background="@color/buttonColor"
            android:text="@string/adopn_tButton"
            android:textStyle="bold" />

    </RelativeLayout>